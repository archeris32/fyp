extends default

block content
    
    if(username)
        if(role == 'new')
            h2(class="text-center") Contact Administrator to asign role 
            include new_contact_admin
        if(role == 'admin' || role == 'staff')

            div(class="container")
                h5 Search by Name
                input(type="text" id="myInput" onkeyup="myFunction()" placeholder="Search by names.." title="Type in a name" style="border-radius:10px;")
                table(class="table table-hover table-bordered mt-5 " id="myTable")
                    thead(class="table-secondary")
                        tr
                            th First Name                 
                            th Last Name 
                            th Phone
                            th Appointment 1
                            th Appointment 2
                            th Appointment 3
                    tbody
                        for d in results1
                            tr
                                td= d.firstName
                                td= d.lastName 
                                td=d.phone 
                                td  
                                    strong
                                        p hour #{d.startime1}
                                    p date #{d.nextapp1}
                                td
                                    strong
                                        p hour #{d.startime2}
                                    p date #{d.nextapp2}
                                td
                                    strong 
                                        p hour #{d.startime3}
                                    p date #{d.nextapp3}
            div(class="container justify-content-center mt-5")
                        div(class="card " style="border-radius:30px")
                            strong
                                div(class="card-header bg-info text-center" style="border-radius:30px 30px 0 0") Next Appointment
                            div(class="card-body d-flex justify-content-between mx-2")
                                h5(class="card-title text-center") 
                                    u Appointments 
                                    for d in results3
                                        p(class="card-text my-3")=d.firstName + " "+ d.lastName
                                h5(class="card-title text-center") 
                                    u Next Appointment :
                                    p(class="card-text")   
                                    for i in results3
                                        p=i.date
                                    
            