include default
block content

div(class="container")
    h5 Search by Name
    input(type="text" id="myInput" onkeyup="myFunction()" placeholder="Search by names.." title="Type in a name" style="border-radius:10px;")
    table(class="table table-hover table-bordered " id="myTable")
        thead
            tr
                th First Name                 
                th Last Name 
                th Phone 
        tbody
            for d in data
                tr
                    td= d.FirstName
                    td= d.LastName 
                    td 
                        button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2") Edit Client
                        div(class="modal fade" id="myModal2" role="dialog")
                            div(class="modal-dialog")
                                div(class="modal-content")
                                    div(class="modal-header")
                                        button(type="button" class="close" data-dismiss="modal") X
                                        h4(class="modal-title") Modal Header
                                    div(class="modal-body")
                                        h1 Last Name:
                                        p=d.LastName
                                        h1 First Name:
                                        p=d.FirstName
                                        h1 Email:
                                        p=d.email
                                        h1 Phone:
                                        p=d.phone
                                        h1 Role: 
                                        p=d.Position
                                    div(class="modal-footer")
                                        button(type="button" class="btn btn-default" data-dismiss="modal") Close