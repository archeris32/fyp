extends default

block content
    div(class="container")
        h1(class="p-2") Update Database 
            

        form(class="mb-5" method="post", action=`/edit/${JSON.stringify(data)}`)
            div(class="d-flex justify-content-center")
                input(type='text' name='id'  class="form-control m-2" value=data.id)
            div(class="d-flex justify-content-center")
                input(type='text' name='name'  class="form-control m-2" value=data.firstName)
            
            div(class="d-flex justify-content-center")
                input(type='text' name='lastName'  class="form-control m-2" value=data.lastName )

            div(class="d-flex justify-content-center")
                input(type='text' name='age'  class="form-control m-2" value=data.age)
            div(class="d-flex justify-content-center")
                input(type='text' name='phone' class="form-control m-2" value=data.phone )
            div(class="d-flex justify-content-center")
                input(type='text' name='email' id='email' class="form-control m-2" value=data.email )
            div(class="d-flex justify-content-center")
                input(type='text' name='address' id='address' class="form-control m-2" value=data.address )
            div(class="d-flex justify-content-center")
                input(type='data' name='walkin' id='walkin' class="form-control m-2" value=data.walkin)
            div(class="d-flex justify-content-center")
                input(type='text' name='nextapp' id='nextapp' class="form-control m-2" value=data.nextapp )
            div(class="d-flex justify-content-center")
                input(type='text' name='cost'  class="form-control m-2" value=data.cost )
            div(class="d-flex justify-content-center")
                select(id="doctor" name="doctor" class="form-select" )
                    option(value="Dr. Kimia Aksir") Kimia Aksir 
                    option(value="Dr. Pelumi Apantuku") Pelumi Apantuku
        
            div(class="d-flex justify-content-center")
                button(class ='btn btn-primary' type='submit', value='Update' data-toggle="modal" data-target="#myModal") Update
                a.btn(href='/show_customers' type="button" class="btn btn-primary ") back

    