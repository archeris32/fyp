include default
block content
    h1(style="text-align: center; margin-top: 50px;") Contact List
    <div class="container">
        <h2>Dynamic Tabs</h2>
        <ul class="nav nav-tabs">
            <li><a data-toggle="tab" href="#menu1">Add Contact</a></li>
            <li><a data-toggle="tab" href="#menu2">Delete Contact</a></li>
            <li><a data-toggle="tab" href="#menu3">Show Contacts</a></li>
        </ul>

        div(class="tab-content")
            div(id="menu1" class="tab-pane fade")
                div(class="container")
                    div(class="wrapp")
                        form(class="form-horizontal" action="/add_contact" method="POST" class="form-horizontal" role="form")
                            h2 Registration
                            div(class="form-group")
                                label(for="firstName" class="col-sm-3 control-label") First Name
                                div(class="col-sm-9")
                                    input(type="text" id="firstName" placeholder="First Name" name="firstName" class="form-control" autofocus)
                            div(class="form-group")        
                            label(for="Last Name" class="col-sm-3 control-label") Last name
                            div(class="col-sm-9")
                                input(type="text" class="form-control" id="validationDefault02" placeholder="Last name" name="lastName" required)
                            div(class="form-group")        
                            label(for="email" class="col-sm-3 control-label") Email
                            div(class="col-sm-9")
                                input(type="text" class="form-control" id="validationDefault02" placeholder="email" name="email" required)
                            div(class="form-group")        
                            label(for="Phone" class="col-sm-3 control-label") Phone
                            div(class="col-sm-9")
                                input(type="text" class="form-control" id="validationDefault03" placeholder="Phone" name="phone" required)
                            div(class="form-group")        
                            label(for="Position" class="col-sm-3 control-label") Position
                            div(class="col-sm-9")
                                input(type="text" class="form-control" id="validationDefault03" placeholder="Position" name="position" required)    
                            div( class="form-group")
                            div(class="form-check")
                                input(class="form-check-input" type="checkbox" value="" id="invalidCheck2"  required)
                                label(class="form-check-label" for="invalidCheck2")
                                p Agree to terms and conditions
                            button(type="submit" class="btn btn-primary" ) Submit
            <div id="menu2" class="tab-pane fade">
                <h3>Menu 2</h3>
                <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
                </div>
            <div id="menu3" class="tab-pane fade">
                h5 Search by Name
                input(type="text" id="myInput" onkeyup="myFunction()" placeholder="Search by names.." title="Type in a name" style="border-radius:10px;")
                table(class="table table-hover table-bordered " id="myTable")
                    thead
                        tr
                            th First Name                 
                            th Last Name 
                            th Phone 
                    tbody
                        for d in data
                            tr
                                td= d.FirstName
                                td= d.LastName 
                                td 
                                    button(href=`/edit/${JSON.stringify(data[index])}` type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2") Edit Client
                                    div(class="modal fade" id="myModal2" role="dialog")
                                        div(class="modal-dialog")
                                        <!-- Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Modal Header</h4>
                                                </div>
                                                <div class="modal-body">
                                                    h1 Last Name:
                                                    p=d.LastName
                                                    h1 First Name:
                                                    p=d.FirstName
                                                    h1 Email:
                                                    p=d.email
                                                    h1 Phone:
                                                    p=d.phone
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
        </div>
        </div>