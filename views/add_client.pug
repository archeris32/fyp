extends default

block content

    form(action="/add_client" method="POST") 
        div(class="form-row")
            div(class="col-md-4 mb-3")
                label(for="validationDefault01") First name
                input(type="text" class="form-control" id="validationDefault01" placeholder="First name" name="firstName" required)
        div(class="form-row")        
            div(class="col-md-4 mb-3")
                label(for="validationDefault02") Last name
                input(type="text" class="form-control" id="validationDefault02" placeholder="Last name" name="lastName" required)
        div(class="form-row")
            div(class="form-row")
                div(class="col-md-6 mb-3")
                    label(for="validationDefault03") Phone
                    input(type="text" class="form-control" id="validationDefault03" placeholder="Phone" name="phone" required)
        div(class="form-row")
            label(for="validationDefault06") Choose Doctor 
                select(name="doctor" class="form-select" ) 
                    option(value="Dr. Kimia Aksir") Kimia Aksir 
                    option(value="Dr. Pelumi Apantuku") Pelumi 
        div(class="form-row")        
            div(class="col-md-3 mb-3")
                label(for="validationDefault04") email
                input(type="text" class="form-control" id="validationDefault04" placeholder="email" name="email" required)
        div(class="form-row ")
            <div class="input-group form-outline w-25 ">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="cost" name="cost">
                <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
        div( class="form-group")
            div(class="form-check")
                input(class="form-check-input" type="checkbox" value="" id="invalidCheck2"  required)
                label(class="form-check-label" for="invalidCheck2")
                p Agree to terms and conditions
 
        button(class="btn btn-primary" type="submit") Submit form
